    "react-spinners": "^0.8.0"
  },
  "scripts": {
    "tailwind": "yarn tailwind:normalize && yarn tailwind:css",
    "tailwind:normalize": "postcss tailwind build src/styles/normalize.src.css -c tailwind.js -o src/styles/normalize.css",
    "tailwind:css": "postcss tailwind build src/styles/tailwind.src.css -c tailwind.js -o src/styles/tailwind.css",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "purgecss": "purgecss -c purgecss.config.js -o src/styles",
    "serve": "node server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "tailwindcss": "^1.1.4"
  }
